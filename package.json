{
  "name": "vita-care",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node --max-http-header-size=65536 node_modules/vite/bin/vite.js",
    "build": "vite build",
    "preview": "vite preview",
    "mock:api": "json-server --watch src/mock/db.json --port 3333",
    "lint": "eslint --ext .ts,.tsx,.js,.vue src",
    "format": "prettier --write \"src/**/*.{ts,js,vue,json,md}\"",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@vueuse/core": "^13.9.0",
    "apexcharts": "^5.3.5",
    "axios": "^1.12.1",
    "pinia": "^3.0.3",
    "uuid": "^13.0.0",
    "vue": "^3.5.18",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.5.1",
    "vue-toastification": "^2.0.0-rc.5",
    "vue3-apexcharts": "^1.8.0",
    "vuetify": "^3.5.9"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "@playwright/test": "^1.56.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^24.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vercel/node": "^2.3.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^3.2.4",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "jsdom": "^26.1.0",
    "json-server": "^1.0.0-beta.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.92.1",
    "typescript": "~5.8.3",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
